<div class="row">
  <h3 class="text-center">top picks</h3>

  <% @top_articles.each do |article| %>
  <div class="large-4 columns">
    <div class="our-picks-container">
      <div class="our-picks-image">
        <%= image_tag article.attachment.url %>
      </div>

      <div class="our-picks-title">
        <span><%= article.title %></span>
        <hr></hr>
        <span class="editor"><%= link_to 'take me here', article_path(article) %></span>
      </div>
    </div>
  </div>
  <% end %>
</div>


<div class="spacing"></div>

<div class="recent-articles">
  <div class="row">
    <h3 class="text-center">recent articles</h3>
    <% @recent_articles.each do |article| %>
    <div class="large-4 columns">
      <div class="our-picks-container">
        <div class="our-picks-image">
          <%= image_tag article.attachment.url %>
        </div>

        <div class="our-picks-title">
          <span class="editor-black"><%= article.title %></span>
          <hr></hr>
          <span class="editor-black">posted <%= time_posted(article.created_at) %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>